<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/drawable_linearlayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="דף עסק"
            android:id="@+id/goToBusinessPageBtn"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/commercialTitleId"
            android:gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/commercialSubTaitleId"
            android:gravity="center"
            android:text="subText" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/commercialImageId"
            android:layout_gravity="center_horizontal" />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/likeB"
                android:background="@drawable/like"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/commentB"
                android:background="@drawable/comment"
                android:layout_toRightOf="@+id/likeB"
                android:layout_toEndOf="@+id/likeB"
                android:layout_alignBottom="@+id/more_details_btn"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/GPSB"
                android:layout_gravity="right"
                android:background="@drawable/gps"
                android:layout_alignBottom="@+id/commentB"
                android:layout_toRightOf="@+id/commentB"
                android:layout_toEndOf="@+id/commentB"
                android:layout_marginLeft="20dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="אותיות קטנות"
                android:id="@+id/more_details_btn"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>


    </LinearLayout>





    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/comment_list" />
</LinearLayout>